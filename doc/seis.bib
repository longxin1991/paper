file = {:home/longxin/documents/Mendeley Desktop/Journal of Geophysical Research Solid Earth/2000/Margerin, Campillo, Van Tiggelen{\_}2000{\_}Monte Carlo simulation of multiple scattering of elastic waves.pdf:pdf},
issn = {2156-2202},
journal = {Journal of Geophysical Research: Solid Earth},
keywords = {7260 Theory},
month = {apr},
number = {B4},
pages = {7873--7892},
title = {{Monte Carlo simulation of multiple scattering of elastic waves}},
url = {http://dx.doi.org/10.1029/1999JB900359},
