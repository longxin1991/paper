	Doi = {10.1029/91JB01486},
	File = {:Users/longxin/Documents/Mendeley Desktop/Journal of Geophysical Research Solid Earth/1991/Revenaugh, Jordan/Revenaugh, Jordan{\_}1991{\_}Mantle layering from ScS reverberations 2. The transition zone.pdf:pdf},
