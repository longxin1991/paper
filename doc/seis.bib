file = {:home/longxin/documents/Mendeley Desktop/Journal of Geophysical Research Solid Earth/1991/Revenaugh, Jordan{\_}1991{\_}Mantle layering from ScS reverberations 3. The upper mantle.pdf:pdf},
issn = {2156-2202},
journal = {Journal of Geophysical Research: Solid Earth},
number = {B12},
pages = {19781--19810},
title = {{Mantle layering from ScS reverberations: 3. The upper mantle}},
