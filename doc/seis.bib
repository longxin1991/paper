doi = {10.1046/j.1365-246X.2002.01683.x},
file = {:home/longxin/documents/Mendeley Desktop/Geophysical Journal International/2002/Spetzler, Trampert, Snieder{\_}2002{\_}The effect of scattering in surface wave tomography.pdf:pdf},
