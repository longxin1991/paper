file = {:home/longxin/documents/Mendeley Desktop/Journal of Geophysical Research Solid Earth/2000/Hedlin, Shearer{\_}2000{\_}An analysis of large-scale variations in small-scale mantle heterogeneity using Global Seismographic Network record.pdf:pdf},
