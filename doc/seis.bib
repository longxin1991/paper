file = {:home/longxin/documents/Mendeley Desktop/Earth and Planetary Science Letters/2007/Cormier{\_}2007{\_}Texture of the uppermost inner core from forward- and back-scattered seismic waves.pdf:pdf},
issn = {0012-821X},
journal = {Earth and Planetary Science Letters},
keywords = {inner core},
number = {3–4},
pages = {442--453},
title = {{Texture of the uppermost inner core from forward- and back-scattered seismic waves}},
url = {http://www.sciencedirect.com/science/article/pii/S0012821X0700218X},
volume = {258},
