	File = {:Users/longxin/Documents/Mendeley Desktop/Journal of Geophysical Research Solid Earth/1991/Revenaugh, Jordan/Revenaugh, Jordan{\_}1991{\_}Mantle layering from ScS reverberations 1. Waveform inversion of zeroth-order reverberations.pdf:pdf},
	Issn = {2156-2202},
